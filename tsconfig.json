{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "rootDir": ".",
    "outDir": "build",
    "sourceMap": false
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "system-test/*.ts",
    "browser-test/*.ts",
    "browser-test/**/*.ts"
  ],
  "exclude": [
    "test/fixtures"
  ]
}
